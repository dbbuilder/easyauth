{
  "name": "@easyauth/js-sdk",
  "version": "1.0.0-alpha.2",
  "type": "module",
  "description": "JavaScript/TypeScript SDK for EasyAuth Framework - Universal authentication for web applications",
  "keywords": [
    "authentication",
    "oauth",
    "google",
    "apple",
    "facebook",
    "azure-b2c",
    "typescript",
    "javascript",
    "sdk"
  ],
  "author": "EasyAuth Development Team",
  "license": "MIT",
  "homepage": "https://github.com/dbbuilder/easyauth#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbbuilder/easyauth.git",
    "directory": "packages/easyauth-js-sdk"
  },
  "bugs": {
    "url": "https://github.com/dbbuilder/easyauth/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:types && npm run build:esm && npm run build:cjs && npm run build:umd",
    "build:clean": "rimraf dist",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types",
    "build:esm": "rollup -c rollup.config.js --format es --file dist/esm/index.js",
    "build:cjs": "rollup -c rollup.config.js --format cjs --file dist/cjs/index.js",
    "build:umd": "rollup -c rollup.config.js --format umd --name EasyAuth --file dist/umd/easyauth.js",
    "dev": "rollup -c rollup.config.js --format es --file dist/esm/index.js --watch",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:ci": "jest --config jest.config.cjs --ci --coverage --passWithNoTests",
    "lint": "eslint src/**/*.ts tests/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
