{
  "name": "@easyauth/vanilla",
  "version": "1.0.0",
  "description": "Vanilla JavaScript client for EasyAuth Framework - Zero-config authentication for any JS framework",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "browser": "dist/index.umd.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "authentication",
    "vanilla",
    "javascript",
    "typescript",
    "oauth",
    "easyauth",
    "framework",
    "zero-config",
    "universal"
  ],
  "author": "EasyAuth Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbbuilder/easyauth.git",
    "directory": "packages/vanilla"
  },
  "bugs": {
    "url": "https://github.com/dbbuilder/easyauth/issues"
  },
  "homepage": "https://github.com/dbbuilder/easyauth#readme",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}