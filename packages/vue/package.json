{
  "name": "@easyauth/vue",
  "version": "1.0.0",
  "description": "Vue 3 composables and components for EasyAuth Framework",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "typecheck": "vue-tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "authentication",
    "vue",
    "vue3",
    "composables",
    "components",
    "easyauth",
    "oauth",
    "typescript"
  ],
  "author": "EasyAuth Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbbuilder/easyauth.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/dbbuilder/easyauth/issues"
  },
  "homepage": "https://github.com/dbbuilder/easyauth#readme",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^23.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vue": "^3.3.0",
    "vue-tsc": "^3.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
